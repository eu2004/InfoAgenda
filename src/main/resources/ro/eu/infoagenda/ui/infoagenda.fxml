<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="infoAgendaPane" fx:controller="ro.eu.infoagenda.ui.javafx.InfoAgendaController"
            xmlns:fx="http://javafx.com/fxml" stylesheets="/ro/eu/infoagenda/ui/infoagenda.css">
    <center>
        <GridPane>
            <BorderPane.margin>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
            </BorderPane.margin>
            <Label GridPane.rowIndex="1" fx:id="timeInfoLabel"/>
            <Label GridPane.rowIndex="2" fx:id="dateInfoLabel"/>
            <Label GridPane.rowIndex="3" fx:id="weatherCurrentOutsideTempInfoLabel"/>
        </GridPane>
    </center>
    <bottom>
        <GridPane>
            <BorderPane.margin>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
            </BorderPane.margin>
            <Label GridPane.rowIndex="4" fx:id="newsFeederInfoLabel"/>
        </GridPane>
    </bottom>
</BorderPane>

